sha1fingerprint () {
    openssl x509 -sha1 -noout -fingerprint -in $1
}

phplinter () {
    DIR="."
    if [[ -n "$1" ]]; then
        DIR=$1
    fi

    find $DIR -type f -iname "*.php" -not -path "./vendor/*" -print0 | xargs -0 -P 0 -n 1 php -l
}

youtube-dl-mp3 () {
    youtube-dl -f bestaudio --audio-quality 0 --extract-audio --audio-format mp3 -i -o '%(title)s.%(ext)s' $1
}
